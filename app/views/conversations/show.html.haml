- title = t("mailboxer.titles.conversation", recipient: interlocutor_username,
                                             subject: @conversation.subject)
- content_for :meta_title, title

#default_header_section
  %h5
    = link_to t("mailboxer.buttons.back"), mailboxer_conversations_path
  %h1
    = title
  = link_to t("mailboxer.buttons.trash"), trash_mailboxer_conversation_path(@conversation), class: :button, method: :delete

.col-md-7.col-sm-7#messages-thread
  - @conversation.messages_for(current_user).includes(:sender).each do |mes|
    = render partial: "message", locals: {message: mes}

  - if @interlocutor
    = render partial: "reply", locals: {message: @message}

.col-md-5.col-sm-5
  .row.mobile
    = render partial: "partials/google_adsense", locals: { class_name: "google_adsense_336_280", ad_slot: "7225596067"}
  .row.desktop
    = render partial: "partials/google_adsense", locals: { class_name: "google_adsense_300_250", ad_slot: "8702329269"}
